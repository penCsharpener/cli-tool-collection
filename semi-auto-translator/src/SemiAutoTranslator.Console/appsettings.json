{
  "AppSettings": {
    "Url": "",
    "XPathCookieBannerButton": "",
    "CssSelectorPluginButton": "",
    "XPathSourceInput": "",
    "XPathTranslatedTextElements": "",
    "CssSelectorSourceInput": "",
    "CssSelectorTranslatedTextElements": "",
    "MaxCharactersPerRequest": 50000,
    "TextSource": {
      "FilePath": ""
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": ".\\bin\\SemiAutoTranslator.Console.-.log",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 30
              }
            },
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Properties": {
      "ApplicationName": "SemiAutoTranslator.Console"
    }
  }
}
